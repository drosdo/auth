:global
  .container
    width 100%
    height 100%
    font-size 1.6rem
    line-height 1.1

  .container2
    width 100%
    height 100%

  .header
    padding 20px

  .logo
    font-family 'Limelight', cursive;
    font-size 48px
    color $colorLogo

  .navbar
    display flex
    align-items center
    justify-content space-between

  .nav
    padding 0 20px
    flex-grow 1
    display flex

  .nav-right
    flex-grow 0
    .nav-item
      font-size 10px

  .nav-item
    font-size 24px
    margin 0 10px

  .wrap
    display flex
    height calc(100% - 100px)

  .subnav
    width 100%
    display flex
    border-bottom 6px solid $colorPurple
    justify-content center
    &__item
      font-family WebServeroff, sans-serif
      font-size 2.6rem
      line-height .8
      padding 0 10px
      margin-bottom -9px
      display flex
      line-height 1.4

      a
        display block
      &._active
       font-size 3.5rem
       line-height 1
       margin-bottom -6px
       border-bottom 12px solid $colorPurple
       a
        margin-bottom -12px


  .sidebar
    width 200px
    height 100%
    overflow-y scroll
  .content
    width 70%
    min-width 500px
    height 100%
    overflow-y scroll
