:global
  .container
    width 100%
    height 100%
  .container2
    width 100%
    height 100%
  .header
    padding 20px
  .logo
    font-family 'Limelight', cursive;
    font-size 48px
    color $colorLogo

  .navbar
    display flex
    align-items center
    justify-content space-between

  .nav
    padding 0 20px
    flex-grow 1
    display flex

  .nav-item
    font-size 24px
    margin 0 10px

  .wrap
    display flex
    height calc(100% - 100px)

  .sidebar
    width 200px
    height 100%
    overflow-y scroll
  .content
    width 70%
    height 100%
    overflow-y scroll
