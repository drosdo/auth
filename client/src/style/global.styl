html
  box-sizing border-box

*
*:before
*:after
  box-sizing inherit

html
body
  height 100%
  width 100%
  font-family 'Open Sans', sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale


html
  font-size 100%
  text-rendering optimizeLegibility
  font-feature-settings 'kern' 1
  font-kerning normal
  //+mediaMax($small)
a
a:hover
  text-decoration none
  color $colorLinks

a:focus
  outline none
  border none

h1
h2
h3
h4
h5
  margin 0

h3
  font-weight 400

ul
  list-style none
  padding 0
  margin 0
